[
  {
    "name": "clair-scanner",
    "image": "sriddell/clair-scanner:1.2.1",
    "cpu": 512,
    "memory": 1024,
    "essential": true,
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "clair-scanner"
        }
    },
    "environment": [
        {
            "name": "SQS_QUEUE_URL",
            "value": "${sqs_url}"
        },
        {
            "name": "REGION",
            "value": "${region}"
        },
        {
            "name": "CLAIR_ADDR",
            "value": "${clair_endpoint}"
        },
        {
            "name": "BUCKET",
            "value": "${output_bucket}"
        },
        {
            "name": "LOG_LEVEL",
            "value": "INFO"
        }
    ]
  }
]
