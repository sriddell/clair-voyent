#!/usr/bin/env bash
sleep 60
yum update -y
yum install -y docker jq
service docker start
mkdir /clair
AWS_DEFAULT_REGION=us-east-1 aws ssm get-parameter --name "/clair/clair-config.yaml" --with-decryption | jq -r .Parameter.Value > /clair/clair-config.yml
docker run -d -p 6060-6061:6060-6061 -v /clair:/config:ro quay.io/coreos/clair:v2.0.5 -config=/config/clair-config.yml
wget https://github.com/optiopay/klar/releases/download/v2.3.0/klar-2.3.0-linux-amd64
mv klar-2.3.0-linux-amd64 klar
chmod +x klar
