[
  {
    "name": "clair",
    "image": "sriddell/clair-with-ssm:latest",
    "cpu": 8000,
    "memory": 16384,
    "ulimits": [
        {
          "softLimit": 16384,
          "hardLimit": 16384,
          "name": "nofile"
        }
    ],
    "essential": true,
    "links": ["notification-endpoint"],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "clair"
        }
    },
    "environment": [
        {
            "name": "CONFIG_PARAMETER_REGION",
            "value": "${region}"
        },
        {
            "name": "CONFIG_PARAMETER_NAME",
            "value": "${config_parameter_name}"
        }
    ],
    "portMappings": [
      {
        "containerPort": 6060
      }
    ]
  },
  {
    "name": "notification-endpoint",
    "image": "sriddell/clair-notification-endpoint:0.0.2",
    "cpu": 128,
    "memory": 128,
    "essential": true,
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "notification-endpoint"
        }
    },
    "environment": [
        {
            "name": "SQS_QUEUE_URL",
            "value": "${sqs_url}"
        },
        {
            "name": "REGION",
            "value": "${region}"
        },
        {
            "name": "CLAIR_ENDPOINT",
            "value": "http://${clair_endpoint}"
        }
    ]
  }
]